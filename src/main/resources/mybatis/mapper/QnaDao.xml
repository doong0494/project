<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.movie.dao.IQnaDao">
 
 	<select id="getQna" resultType="com.movie.dto.QnaVO">
 		select * from qna where qseq=#{qseq}
 	</select>
 	
 	<insert id="insertQna" parameterType="com.movie.dto.QnaVO">
 		insert into qna (qseq, category, subject, content, id)
		values(qna_seq.nextval, #{category}, #{subject}, #{content}, #{id})
	</insert>
	
	<delete id="deleteQna" parameterType ="com.movie.dto.QnaVO">
		delete from qna where qseq=#{qseq}
	</delete>
	
	<update id="reviseQna" parameterType ="com.movie.dto.QnaVO">
		update qna set subject=#{subject}, category=#{category},
		content=#{content} where qseq=#{qseq}
	</update>
	
	<delete id="deleteQnaMember" parameterType ="com.movie.dto.QnaVO">
		delete from qna where id=#{id}
	</delete>
	
 </mapper>